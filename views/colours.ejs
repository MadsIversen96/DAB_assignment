<!DOCTYPE html>
<html>

<head>
  <title> DAB - Rent Vehicles</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="../js/common.js"></script>
</head>

<body>
  <%- include('./partials/navbar.ejs', {user: user}) %>
    <div class="container-fluid mt-5">
      <h2 class="p-3 text-center">Vehicles for Rent - Colours</h2>
        <div class="list-group">
          <div class="row px-3 py-1 w-100">
            <span class="col py-1 bg-noroff">Id</span>
            <span class="col py-1 bg-noroff">Name</span>
            <span class="col py-1 bg-noroff">Options</span>
          </div>
          <% colours.forEach(function(colour) { %>
            <div class="row px-3 py-1 w-100">
              <span class="col py-1 bg-light">
                <%=colour.id%>
              </span>
              <span class="col py-1 bg-light">
                <%=colour.name%>
              </span>
              <span class="col py-1 bg-light text-center">
                <button class="btn-sm btn-warning" onclick="updateColour( <%=colour.id%>)">Update colour</button>
                <button class="btn-sm btn-danger" onclick="deleteColour( <%=colour.id%>)">Delete colour</button>
              </span>
            </div>
            <% }); %>
              <hr>
            <div class="row">
              <div class="col-4"></div>
              <div class="col-4 text-center mt-2">
                <div class="col-4 text-center mt-2">
                  <form action="/colours/add" method="POST">
                    <label for="new-colour-name">Enter the name for the new colour:</label>
                    <input type="text" name="name" id="new-colour-name" required>
                    <button class="btn btn-success" type="submit">Add New Colour</button>
                  </form>
                </div>
              </div>
              <div class="col-4"></div>
            </div>
      </div>
    </div>
</body>

</html>